<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodreceipe">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodReceipe">
        <activity
            android:name=".activty.ChekActivity"
            android:exported="false" />
        <activity
            android:name=".activty.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".activty.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".activty.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activty.CookingActivity"
            android:exported="false" />
        <activity
            android:name=".activty.MainActivity"
            android:exported="false" />
    </application>

</manifest>